<h4 class="ui center aligned medium icon header">
    <i class="circular blue users icon"></i>
    Say Something
</h4>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid card chatbox">
            <div class="content">
                <div class="ui small feed">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <form class="ui reply">
                    <div class="field">
                        <div class="ui fluid icon input">
                            <input type="text" placeholder="Write something...">
                            <i class="borderd blue edit icon"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid card chatbox">
            <div class="content">
                <div class="ui secondary vertical pointing menu">
                    <a class="item active">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>